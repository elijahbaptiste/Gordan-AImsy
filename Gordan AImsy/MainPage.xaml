<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gordan_AImsy.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="aichef.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="Cartoon Chef Mascot" />

            <Label
                Text="I'm Gordan AImsy &#10;Your AI kitchen Assitant"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level3"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I" />
            <HorizontalStackLayout
                HeightRequest="400">
                <Label 
                    Text="Search History"
                    VerticalOptions="Start"/>
                <ListView>
                    <ListView.HeaderTemplate>
                        <DataTemplate>
                            <StackLayout BackgroundColor="LightGray">
                                <Label Margin="10,0,0,0"
                       Text="Chat History"
                       FontSize="12"
                       FontAttributes="Bold" />
                            </StackLayout>
                        </DataTemplate>
                    </ListView.HeaderTemplate>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding question}"
                            Detail="{Binding message}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <VerticalStackLayout>
                    <HorizontalStackLayout
                        HeightRequest="400"
                        WidthRequest="270"
                        Spacing="10">
                        <Entry 
                            Placeholder="Ask Me a Question" 
                            IsPassword="False" 
                            Keyboard="Text"
                            VerticalOptions="Start"/>
                        <ImageButton
                            Source="searchbutton.png"
                            Clicked="OnButtonClicked"
                            IsEnabled="True"
                            Aspect="AspectFill"
                            VerticalOptions="Start"
                            HorizontalOptions="Start"
                            WidthRequest="30"
                            HeightRequest="30">
                        </ImageButton>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </HorizontalStackLayout>
            
           
            
            

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
